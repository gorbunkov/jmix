<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://browseCaption"
        focusComponent="usersTable"
        messagesPack="io.jmix.securityui.screen.user">
    <data readOnly="true">
        <collection id="usersDc"
                    class="io.jmix.security.entity.User"
                    view="_local">
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from sec_User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <table id="usersTable"
               width="100%"
               dataContainer="usersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="username"/>
                <column id="firstName"/>
                <column id="middleName"/>
                <column id="lastName"/>
                <column id="email"/>
                <column id="enabled"/>
            </columns>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="usersTable.create"/>
                <button id="editBtn" action="usersTable.edit"/>
                <button id="removeBtn" action="usersTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
